    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/img/lds-4028728_1920.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Announcements</h1>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <table class="table">
                    <tr>
                        <th>

                            <input type="button" value="New" onclick="typeOfImg()">

                        </th>
                        <th>#</th>
                        <th>Title</th>
                        <th>Details</th>
                        <th>Date and Time</th>
                        <th></th>
                    </tr>
                    <% for(let i=0;i<announcement.length;i++) { %>
                        <tr>
                            <td><input type="button" value="Edit" onclick="editStudent('<%= announcement[i].a_id%>')"></td>
                            <td>
                                <%=i+1%>
                            </td>
                            <td>
                                <%= announcement[i].title  %>
                            </td>
                            <td>
                                <%= announcement[i].details %>
                            </td>
                            <td>
                                <%= announcement[i].dateAsString%>
                            </td>
                            <td><input type="button" value="Delete" onclick="mercyDelete('<%= announcement[i].a_id%>')"></td>
                        </tr>
                        <% }  %>
                </table>

                <script>
                    function mercyDelete(a_id) {
                        var ans = prompt("Are you sure you want to delete this announcement?", "N");
                        if (ans.toLowerCase() === 'y') {
                            window.location.href = "/delete/" + a_id;
                        }
                    }

                    function editStudent(a_id) {
                        window.location.href = "/editAnnouncement/" + a_id;
                    }

                    function typeOfImg() {
                        let imageType = confirm("Upload an Image or use one from the web(or a default)?\n" +
                            "\n\"OK\" to upload a file \n\n \"Cancel\" to use a default image or an image from the web\n");
                        if (imageType == true) {
                            window.location.href = "/upload";
                        } else {
                            window.location.href = "/createAnnouncement";
                        }
                    }
                </script>
            </div>
        </div>
    </div>

